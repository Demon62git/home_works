<%- include('../common/header', {title: title}) %>
<%- include('../common/menu') %>

<h1><%= title %></h1>

<div class="row">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-body">

                <h3 class="card-title"><%= book.title %></h3>
                <p class="card-text"><%= book.description %></p>
                <p class="card-text"><b>Автор: </b> <%= book.authors %></p>
                <p class="card-text"><b>Оценка: </b> <%= book.favorite %></p>
                <p class="card-text"><b>Файл книги: </b> <%= book.fileBook %></p>

                <div class="text-right">
                    <a class="btn btn-sm btn-primary" href="/update/<%= book.id %>">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>
                    <form action="/delete/<%= book.id %>" method="POST" class="d-inline">
                        <button class="btn btn-sm btn-danger">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

<%- include('../common/footer') %>