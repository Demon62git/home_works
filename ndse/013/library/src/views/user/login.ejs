<%- include('../common/header', { title: title, user: user }) %>

<h1><%= title %></h1>

<div><h3><u><%= message %></u></h3></div>

<div class="row">
    <div class="col-sm-6">
        
        <form method="POST" action="/view/user/login" class="mt-5">
            <div class="form-group">
                <label for="login">Логин</label>
                <input type="text"
                       value="<%= defaults.login %>"
                       name="login"
                       class="form-control"
                       id="login">
            </div>
            
            <div class="form-group">
                <label for="email">E-mail</label>
                <input type="text"
                       value="<%= defaults.email %>"
                       name="email"
                       class="form-control"
                       id="email">
            </div>

            <div class="form-group">
                <label for="password">Пароль</label>
                <input type="password"
                       value="<%= defaults.password %>"
                       name="password"
                       class="form-control"
                       id="password">
            </div>

            <div class="form-group text-right ">
                <button type="submit" class="btn btn-primary">Войти</button>
                <a class="btn btn-primary" href="/view/user/signup">Регистрация</a>
            </div>
        </form>

    </div>
</div>

<%- include('../common/footer') %>